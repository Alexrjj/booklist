<%- include('partials/header') %>
<body>
<div class="container mt-4">
    <%- include('partials/navbar') %>
    <form method="POST" action="/save">
        <div class="form-group">
            <label for="title">Título</label>
            <input class="form-control" type="text" name="title">
        </div>
        <div class="form-group">
            <label for="author">Autor</label>
            <input type="text" class="form-control" name="author">
        </div>
        <div class="form-group">
            <label for="isbn">ISBN</label>
            <input type="text" class="form-control" name="isbn">
        </div>

        <button class="form-control btn btn-primary" name="submit">Adicionar</button>
    </form>

    <br>
    <hr>
    <table class="table table-bordered table-striped text-center">
        <tr class="table-secondary">
            <th>Título</th>
            <th>Autor</th>
            <th>ISBN</th>
            <th>Ações</th>
        </tr>
        <% books.forEach((book) => { %>
            <form method="POST" action="/delete">
                <tr>
                    <td><%= book.title %></td>
                    <input type="hidden" name="id" value="<%= book.id %>">
                    <td><%= book.author %></td>
                    <td><%= book.isbn %></td>
                    <td>
                        <a href="/edit/<%= book.id %>"><h5 class="fa-fw far fa-edit text-primary"></h5></a>
                        <button class="fabutton" type="submit"><h5 class="fa-fw far fa-trash-alt text-danger"></h5>
                        </button>
                    </td>
                </tr>
            </form>
        <% }); %>
    </table>
</div>
</body>

<%- include('partials/footer') %>